<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f8f9fa"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15">

                <LinearLayout
                    android:layout_width="@dimen/dp_230"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">


                    <RadioGroup
                        android:id="@+id/rg_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_devices"
                            android:layout_width="0dp"
                            android:layout_height="33dp"
                            android:layout_weight="1"
                            android:background="@drawable/my_devices_selector"
                            android:button="@null"
                            android:gravity="center"
                            android:text="设备列表"
                            android:textColor="@drawable/devices_text_color_selector">

                        </RadioButton>


                        <RadioButton
                            android:id="@+id/rb_add_devices"
                            android:layout_width="0dp"
                            android:layout_height="33dp"
                            android:layout_weight="1"
                            android:background="@drawable/my_deveice_right_selector"
                            android:button="@null"
                            android:gravity="center"
                            android:text="增加设备"
                            android:textColor="@drawable/devices_text_color_selector">


                        </RadioButton>
                    </RadioGroup>

                </LinearLayout>


            </RelativeLayout>

            <FrameLayout
                android:id="@+id/device_framelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></FrameLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>