<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wole.wozhilian">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".login.view.StartAppActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".login.view.LoginActivity" />
        <activity android:name=".login.view.ForgetPasswordActivity" />
        <activity android:name=".login.view.RegisterUserActivity" />
        <activity android:name=".login.view.ModifyPasswordActivity" />
        <activity android:name=".home.view.activity.HomeActivity" />
        <activity android:name=".home.view.activity.DevicesStatusActivity" />
        <activity android:name=".base.BaseActivity"></activity>
    </application>

</manifest>